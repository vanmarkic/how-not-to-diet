---
interface Props {
  food: {
    id: string;
    name: string;
    categories: string[];
    properties: string[];
    benefits: string;
    timing: string[];
    amount: string;
    sources: {
      pages: number[];
      quotes: string[];
    };
  };
  selected?: boolean;
}

const { food, selected = false } = Astro.props;

// Format categories for display
const formatCategory = (cat: string) => {
  return cat.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ');
};

// Get primary category for badge
const primaryCategory = food.categories[0];

// Format timing for display
const formatTiming = (timing: string) => {
  return timing.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ');
};
---

<article class="food-card" data-selected={selected} data-food-id={food.id}>
  <div class="food-header">
    <div class="header-content">
      <h3>{food.name}</h3>
      <span class="category-badge">{formatCategory(primaryCategory)}</span>
    </div>
    <button class="select-button" aria-label={selected ? 'Deselect food' : 'Select food'}>
      <span class="checkbox">{selected ? '✓' : ''}</span>
    </button>
  </div>

  <div class="food-properties">
    <h4>Key Properties</h4>
    <ul>
      {food.properties.slice(0, 3).map(prop => (
        <li>{prop}</li>
      ))}
    </ul>
  </div>

  <div class="food-benefits">
    <h4>Health Benefits</h4>
    <p>{food.benefits.length > 150 ? food.benefits.substring(0, 150) + '...' : food.benefits}</p>
  </div>

  <div class="food-meta">
    <div class="meta-item">
      <span class="label">Timing</span>
      <div class="timing-tags">
        {food.timing.map(time => (
          <span class="timing-tag">{formatTiming(time)}</span>
        ))}
      </div>
    </div>
    <div class="meta-item">
      <span class="label">Amount</span>
      <span class="amount">{food.amount}</span>
    </div>
  </div>

  <div class="food-footer">
    <span class="source-pages">
      Pages: {food.sources.pages.join(', ')}
    </span>
    <div class="categories">
      {food.categories.slice(1, 3).map(cat => (
        <span class="category-tag">{formatCategory(cat)}</span>
      ))}
    </div>
  </div>
</article>

<style>
  .food-card {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    border: 2px solid transparent;
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    height: 100%;
  }

  .food-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.12);
    border-color: var(--color-accent);
  }

  .food-card[data-selected="true"] {
    border-color: var(--color-secondary);
    background: linear-gradient(135deg, #ffffff 0%, #f1f8e9 100%);
    box-shadow: 0 4px 16px rgba(90, 140, 47, 0.2);
  }

  .food-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
  }

  .header-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  h3 {
    color: var(--color-primary);
    font-size: 1.35rem;
    font-weight: 700;
    margin: 0;
    line-height: 1.3;
  }

  .category-badge {
    display: inline-block;
    background: var(--color-secondary);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    width: fit-content;
  }

  .select-button {
    background: white;
    border: 2px solid var(--color-border);
    border-radius: 8px;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
    flex-shrink: 0;
  }

  .select-button:hover {
    border-color: var(--color-secondary);
    background: var(--color-bg);
  }

  .food-card[data-selected="true"] .select-button {
    background: var(--color-secondary);
    border-color: var(--color-secondary);
  }

  .checkbox {
    font-size: 1.25rem;
    color: white;
    font-weight: bold;
  }

  .food-properties,
  .food-benefits {
    border-left: 3px solid var(--color-accent);
    padding-left: 1rem;
  }

  h4 {
    color: var(--color-secondary);
    font-size: 0.9rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .food-properties ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .food-properties li {
    color: var(--color-text);
    font-size: 0.9rem;
    line-height: 1.5;
    position: relative;
    padding-left: 1.2rem;
  }

  .food-properties li::before {
    content: '•';
    color: var(--color-accent);
    font-weight: bold;
    position: absolute;
    left: 0;
    font-size: 1.2rem;
    line-height: 1.3;
  }

  .food-benefits p {
    color: var(--color-text);
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0;
  }

  .food-meta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 1rem;
    background: var(--color-bg);
    border-radius: 8px;
  }

  .meta-item {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .meta-item .label {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--color-secondary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .timing-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .timing-tag {
    background: white;
    color: var(--color-secondary);
    padding: 0.25rem 0.6rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 500;
    border: 1px solid var(--color-border);
  }

  .amount {
    color: var(--color-primary);
    font-size: 0.9rem;
    font-weight: 600;
  }

  .food-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 0.75rem;
    border-top: 1px solid var(--color-border);
    margin-top: auto;
  }

  .source-pages {
    font-size: 0.75rem;
    color: #666;
    font-style: italic;
  }

  .categories {
    display: flex;
    gap: 0.4rem;
    flex-wrap: wrap;
  }

  .category-tag {
    background: var(--color-accent);
    color: white;
    padding: 0.2rem 0.5rem;
    border-radius: 10px;
    font-size: 0.7rem;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .food-card {
      padding: 1.25rem;
    }

    h3 {
      font-size: 1.2rem;
    }

    .food-footer {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const foodCards = document.querySelectorAll('.food-card');

    foodCards.forEach(card => {
      const button = card.querySelector('.select-button');
      if (button) {
        button.addEventListener('click', (e) => {
          e.preventDefault();
          const isSelected = card.getAttribute('data-selected') === 'true';
          card.setAttribute('data-selected', (!isSelected).toString());

          // Update aria-label
          button.setAttribute('aria-label', isSelected ? 'Select food' : 'Deselect food');

          // Dispatch custom event for parent components to listen to
          card.dispatchEvent(new CustomEvent('food-selection-changed', {
            bubbles: true,
            detail: {
              foodId: card.getAttribute('data-food-id'),
              selected: !isSelected
            }
          }));
        });
      }
    });
  });
</script>
