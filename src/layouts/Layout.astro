---
import { getPath, getAssetPath } from '@utils/paths';

interface Props {
  title: string;
  description?: string;
  keywords?: string;
  image?: string;
  type?: 'website' | 'article';
  author?: string;
  structuredData?: object;
}

const { 
  title, 
  description = 'Science-based weekly menu planner inspired by How Not To Diet. Create healthy meal plans with optimal food combinations, synergies, and nutrition timing.',
  keywords = 'healthy meal planning, nutrition science, food synergies, Dr. Greger, plant-based diet, anti-inflammatory foods, weight loss, healthy recipes, daily dozen, 21 tweaks',
  image = '/how-not-to-diet/og-image.svg',
  type = 'website',
  author = 'Dragan Markovic',
  structuredData
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const fullImageUrl = new URL(image, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImageUrl} />
    <meta property="og:site_name" content="How Not To Diet - Menu Planner" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullImageUrl} />
    <meta name="twitter:creator" content="@draganmarkovic" />
    
    <!-- Additional SEO -->
    <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />
    <meta name="google-site-verification" content="bqsdtKCk4WynKdZGVFg_PJYnz5859uHeNT7l9QN85MM" />
    <meta name="theme-color" content="#1a3d2e" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    
    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href={getAssetPath('favicon.svg')} />
    <link rel="apple-touch-icon" href={getAssetPath('favicon.svg')} />
    
    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <!-- Fonts with optimal loading -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700;800&family=Manrope:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Structured Data (JSON-LD) -->
    {structuredData && (
      <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
    )}
    
    <!-- Organization Schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "How Not To Diet - Menu Planner",
        "url": "https://vanmarkic.github.io/how-not-to-diet/",
        "description": "Science-based weekly menu planner for healthy eating",
        "author": {
          "@type": "Person",
          "name": "Dragan Markovic"
        },
        "potentialAction": {
          "@type": "SearchAction",
          "target": "https://vanmarkic.github.io/how-not-to-diet/foods?search={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      }
    </script>
  </head>
  <body>
    <!-- Skip to main content for keyboard navigation -->
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    <div class="layout">
      <header role="banner">
        <nav role="navigation" aria-label="Main navigation">
          <a href={getPath()} class="logo" aria-label="How Not To Diet Menu Planner - Home">How Not To Diet - Menu Planner</a>
          
          <button class="mobile-menu-toggle" aria-label="Toggle navigation menu" aria-expanded="false">
            <span class="hamburger"></span>
          </button>
          
          <ul role="menubar" aria-label="Main menu" class="nav-menu">
            <li role="none"><a href={getPath()} role="menuitem">Home</a></li>
            <li role="none"><a href={getPath('planner')} role="menuitem">Weekly Planner</a></li>
            <li role="none"><a href={getPath('foods')} role="menuitem">Foods</a></li>
            <li role="none"><a href={getPath('recipes')} role="menuitem">Recipes</a></li>
            <li role="none"><a href={getPath('api-docs')} role="menuitem">API Docs</a></li>
          </ul>
        </nav>
      </header>

      <main role="main" id="main-content">
        <slot />
      </main>

      <footer role="contentinfo">
        <div class="footer-content">
          <p>&copy; {new Date().getFullYear()} How Not To Diet Menu Planner</p>
          <p class="developer">Developed by <strong>Dragan Markovic</strong></p>
          <nav class="footer-nav" aria-label="Footer navigation">
            <a href={getPath('dev')}>Development Diary</a>
            <span class="separator" aria-hidden="true">•</span>
            <a href="https://github.com/vanmarkic/how-not-to-diet" target="_blank" rel="noopener noreferrer">GitHub</a>
            <span class="separator" aria-hidden="true">•</span>
            <a href="https://vanmarkic.github.io/mycelium-blog/support" target="_blank" rel="noopener noreferrer" class="donate-link">☕ Support</a>
          </nav>
        </div>
      </footer>
    </div>
    
    <script>
      // Mobile menu toggle
      const menuToggle = document.querySelector('.mobile-menu-toggle');
      const navMenu = document.querySelector('.nav-menu');
      
      if (menuToggle && navMenu) {
        menuToggle.addEventListener('click', () => {
          const isOpen = navMenu.classList.toggle('active');
          menuToggle.classList.toggle('active');
          menuToggle.setAttribute('aria-expanded', isOpen.toString());
          document.body.style.overflow = isOpen ? 'hidden' : '';
        });
        
        // Close menu when clicking outside
        document.addEventListener('click', (e) => {
          if (!menuToggle.contains(e.target as Node) && !navMenu.contains(e.target as Node)) {
            navMenu.classList.remove('active');
            menuToggle.classList.remove('active');
            menuToggle.setAttribute('aria-expanded', 'false');
            document.body.style.overflow = '';
          }
        });
        
        // Close menu when clicking a link
        navMenu.querySelectorAll('a').forEach(link => {
          link.addEventListener('click', () => {
            navMenu.classList.remove('active');
            menuToggle.classList.remove('active');
            menuToggle.setAttribute('aria-expanded', 'false');
            document.body.style.overflow = '';
          });
        });
      }
    </script>
  </body>
</html>

<style is:global>
  :root {
    /* Scientific Garden Color Palette */
    --color-forest-deep: #1a3d2e;
    --color-forest-mid: #2d5a3d;
    --color-kale: #5b8c5a;
    --color-sage: #a8b5a0;
    --color-beet: #8b2e3f;
    --color-carrot: #e67e22;
    --color-carrot-light: #ff914d; /* WCAG AA compliant on Forest Deep (5.37:1) */
    --color-carrot-lighter: #ffb380; /* WCAG AA compliant on Forest Mid (4.55:1) */
    --color-golden: #d4a574;

    /* Neutrals */
    --color-cream: #faf8f3;
    --color-sand: #f0ede5;
    --color-stone: #e8e4dc;
    --color-charcoal: #2c2c2c;
    --color-slate: #5a5a5a;

    /* Semantic Colors */
    --color-primary: var(--color-forest-deep);
    --color-secondary: var(--color-kale);
    --color-accent: var(--color-carrot);
    --color-bg: var(--color-cream);
    --color-bg-elevated: #ffffff;
    --color-text: var(--color-charcoal);
    --color-text-muted: var(--color-slate);
    --color-border: var(--color-stone);

    /* Typography */
    --font-display: 'Playfair Display', Georgia, serif;
    --font-body: 'Manrope', system-ui, sans-serif;

    /* Spacing */
    --max-width: 1280px;
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 1.5rem;
    --spacing-lg: 2.5rem;
    --spacing-xl: 4rem;

    /* Borders & Radius */
    --radius-sm: 8px;
    --radius-md: 16px;
    --radius-lg: 24px;
    --radius-full: 9999px;

    /* Shadows */
    --shadow-sm: 0 2px 8px rgba(26, 61, 46, 0.08);
    --shadow-md: 0 4px 16px rgba(26, 61, 46, 0.12);
    --shadow-lg: 0 8px 32px rgba(26, 61, 46, 0.16);

    /* Animations */
    --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
    --transition-base: 250ms cubic-bezier(0.4, 0, 0.2, 1);
    --transition-slow: 400ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: var(--font-body);
    background: var(--color-bg);
    color: var(--color-text);
    line-height: 1.7;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  /* Skip to main content link for accessibility */
  .skip-link {
    position: absolute;
    top: -40px;
    left: 0;
    background: var(--color-carrot);
    color: white;
    padding: 8px 16px;
    text-decoration: none;
    font-weight: 600;
    z-index: 9999;
    border-radius: 0 0 4px 0;
  }

  .skip-link:focus {
    top: 0;
  }

  /* Subtle paper grain texture */
  body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.03'/%3E%3C/svg%3E");
    pointer-events: none;
    z-index: 1;
  }

  .layout {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    position: relative;
    z-index: 2;
  }

  /* Header with organic shape */
  header {
    background: linear-gradient(135deg, var(--color-forest-deep) 0%, var(--color-forest-mid) 100%);
    color: var(--color-cream);
    padding: 1.5rem 2rem;
    position: relative;
    overflow: hidden;
    box-shadow: var(--shadow-md);
  }

  /* Organic blob decoration */
  header::after {
    content: '';
    position: absolute;
    top: -50%;
    right: -10%;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(91, 140, 90, 0.15) 0%, transparent 70%);
    border-radius: 43% 57% 48% 52% / 39% 43% 57% 61%;
    animation: float 20s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) rotate(0deg);
    }
    33% {
      transform: translate(30px, -30px) rotate(5deg);
    }
    66% {
      transform: translate(-20px, 20px) rotate(-5deg);
    }
  }

  nav {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--spacing-md);
    position: relative;
    z-index: 10;
  }

  .logo {
    font-family: var(--font-display);
    font-size: clamp(1.25rem, 4vw, 1.75rem);
    font-weight: 700;
    color: var(--color-cream);
    text-decoration: none;
    letter-spacing: -0.02em;
    transition: all var(--transition-base);
    position: relative;
  }

  .logo::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-carrot);
    transition: width var(--transition-base);
  }

  .logo:hover::after {
    width: 100%;
  }

  /* Mobile menu toggle button */
  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    z-index: 11;
    position: relative;
  }

  .hamburger {
    display: block;
    width: 28px;
    height: 2px;
    background: var(--color-cream);
    position: relative;
    transition: all var(--transition-base);
  }

  .hamburger::before,
  .hamburger::after {
    content: '';
    position: absolute;
    width: 28px;
    height: 2px;
    background: var(--color-cream);
    transition: all var(--transition-base);
  }

  .hamburger::before {
    top: -8px;
  }

  .hamburger::after {
    bottom: -8px;
  }

  .mobile-menu-toggle.active .hamburger {
    background: transparent;
  }

  .mobile-menu-toggle.active .hamburger::before {
    top: 0;
    transform: rotate(45deg);
  }

  .mobile-menu-toggle.active .hamburger::after {
    bottom: 0;
    transform: rotate(-45deg);
  }

  nav ul {
    display: flex;
    list-style: none;
    gap: clamp(1rem, 3vw, 2.5rem);
    flex-wrap: wrap;
  }

  nav ul li a {
    color: var(--color-cream);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    letter-spacing: 0.02em;
    position: relative;
    padding-bottom: 4px;
    transition: color var(--transition-base);
  }

  nav ul li a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 2px;
    background: var(--color-carrot);
    transition: width var(--transition-base);
  }

  nav ul li a:hover {
    color: var(--color-carrot-light);
  }

  nav ul li a:hover::after {
    width: 100%;
  }

  main {
    flex: 1;
    max-width: var(--max-width);
    width: 100%;
    margin: 0 auto;
    padding: clamp(2rem, 5vw, 4rem) clamp(1rem, 3vw, 2rem);
    animation: fadeIn var(--transition-slow);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  footer {
    background: linear-gradient(135deg, var(--color-forest-mid) 0%, var(--color-forest-deep) 100%);
    color: var(--color-sand);
    padding: var(--spacing-lg) var(--spacing-md);
    text-align: center;
    margin-top: auto;
    font-size: 0.9rem;
    letter-spacing: 0.03em;
    border-top: 3px solid var(--color-kale);
  }

  .footer-content {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-content p {
    margin: 0;
  }

  .developer {
    font-size: 0.95rem;
    opacity: 0.9;
  }

  .developer strong {
    color: var(--color-carrot-light);
    font-weight: 600;
  }

  .footer-nav {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-top: 0.5rem;
  }

  .footer-nav a {
    color: var(--color-cream);
    text-decoration: none;
    font-weight: 500;
    transition: color var(--transition-base);
    position: relative;
    padding-bottom: 2px;
  }

  .footer-nav a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--color-carrot);
    transition: width var(--transition-base);
  }

  .footer-nav a:hover {
    color: var(--color-carrot-lighter);
  }

  .footer-nav a:hover::after {
    width: 100%;
  }

  .footer-nav .separator {
    color: var(--color-sage);
    opacity: 0.5;
  }

  .footer-nav .donate-link {
    font-weight: 600;
    background: linear-gradient(135deg, var(--color-golden) 0%, var(--color-carrot) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .footer-nav .donate-link:hover {
    background: linear-gradient(135deg, var(--color-carrot-lighter) 0%, var(--color-golden) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Global Typography Styles */
  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-display);
    line-height: 1.2;
    letter-spacing: -0.02em;
    font-weight: 700;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    header {
      padding: 1.25rem 1rem;
    }

    nav {
      gap: var(--spacing-sm);
    }

    /* Show mobile menu toggle */
    .mobile-menu-toggle {
      display: block;
    }

    /* Hide menu by default on mobile */
    nav ul {
      position: fixed;
      top: 0;
      right: -100%;
      width: 280px;
      height: 100vh;
      background: linear-gradient(135deg, var(--color-forest-deep) 0%, var(--color-forest-mid) 100%);
      flex-direction: column;
      justify-content: flex-start;
      align-items: flex-start;
      padding: 5rem 2rem 2rem;
      gap: 0;
      box-shadow: -4px 0 16px rgba(0, 0, 0, 0.3);
      transition: right var(--transition-base);
      z-index: 10;
      overflow-y: auto;
    }

    nav ul.active {
      right: 0;
    }

    nav ul li {
      width: 100%;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    nav ul li:last-child {
      border-bottom: none;
    }

    nav ul li a {
      display: block;
      width: 100%;
      padding: 1rem 0;
      font-size: 1.1rem;
      text-align: left;
    }

    nav ul li a::after {
      display: none;
    }

    nav ul li a:hover {
      padding-left: 0.5rem;
    }

    main {
      padding: var(--spacing-lg) var(--spacing-sm);
    }

    footer {
      padding: var(--spacing-md) var(--spacing-sm);
    }

    .footer-nav {
      flex-direction: column;
      gap: 0.5rem;
    }

    .footer-nav .separator {
      display: none;
    }
  }

  @media (max-width: 480px) {
    nav ul {
      width: 100%;
    }

    nav ul li a {
      font-size: 1rem;
    }
  }
</style>
