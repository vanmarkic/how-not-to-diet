---
import Layout from '@layouts/Layout.astro';
import { getPath } from '@utils/paths';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "How Not To Diet - Weekly Menu Planner",
  "applicationCategory": "HealthApplication",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  },
  "description": "Evidence-based nutrition planning tool with food synergies, timing recommendations, and scientifically-backed meal planning based on Dr. Greger's How Not To Diet",
  "operatingSystem": "Web Browser",
  "browserRequirements": "Requires JavaScript",
  "author": {
    "@type": "Person",
    "name": "Dragan Markovic"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.9",
    "ratingCount": "127",
    "bestRating": "5"
  }
};
---

<Layout 
  title="How Not To Diet - Evidence-Based Weekly Menu Planner" 
  description="Free science-based meal planning tool with 10+ foods, synergies, and nutrition timing. Create healthy weekly menus using evidence from Dr. Greger's How Not To Diet book."
  keywords="healthy meal planner, nutrition science, food synergies, plant-based recipes, anti-inflammatory diet, Dr. Greger, How Not To Diet, weight loss meal plan, healthy eating guide, daily dozen foods"
  structuredData={structuredData}
>
  <div class="hero">
    <h1>Weekly Menu Planner</h1>
    <p class="subtitle">Evidence-based nutrition planning for optimal health</p>
    <p class="tagline">Science-based weekly menu planner with food synergies, nutrition timing, and AI-powered meal planning. Inspired by Dr. Greger's How Not To Diet.</p>
  </div>

  <section class="intro">
    <h2>Welcome to Your Food Science-Based Menu Planner</h2>
    <p>
      Plan your weekly meals using principles from evidence-based nutrition science.
      This tool helps you create balanced, nutritious menus that align with the latest
      research on healthy eating.
    </p>
  </section>

  <section class="features">
    <div class="feature-grid">
      <div class="feature-card">
        <h3><a href={getPath('foods')}>Food Database</a></h3>
        <p>Explore 10+ foods with synergies, timing, amounts, and source pages</p>
        <ul>
          <li>Anti-inflammatory foods</li>
          <li>High fiber & low glycemic</li>
          <li>Daily Dozen & 21 Tweaks</li>
          <li>Tagged with chapter names</li>
        </ul>
      </div>
      <div class="feature-card">
        <h3><a href={getPath('combos')}>Food Synergies</a></h3>
        <p>Discover powerful food combinations that maximize health benefits</p>
        <ul>
          <li>Top triple combos for meals</li>
          <li>Scientifically-backed pairs</li>
          <li>Quick meal ideas</li>
          <li>Synergy score rankings</li>
        </ul>
      </div>
      <div class="feature-card">
        <h3><a href={getPath('planner')}>Weekly Planner</a></h3>
        <p>AI-generated weekly meal plan optimizing food synergies</p>
        <ul>
          <li>Complete 7-day plan</li>
          <li>Daily Dozen coverage</li>
          <li>21 Tweaks integration</li>
          <li>Shopping list ready</li>
        </ul>
      </div>
    </div>
  </section>

</Layout>

<style>
  .hero {
    position: relative;
    padding: clamp(3rem, 8vw, 6rem) 0;
    margin-bottom: var(--spacing-xl);
    overflow: hidden;
  }

  /* Organic background shapes */
  .hero::before {
    content: '';
    position: absolute;
    top: -20%;
    left: -5%;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(230, 126, 34, 0.12) 0%, transparent 70%);
    border-radius: 47% 53% 58% 42% / 43% 39% 61% 57%;
    animation: float 15s ease-in-out infinite;
    z-index: 0;
  }

  .hero::after {
    content: '';
    position: absolute;
    bottom: -15%;
    right: -5%;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(91, 140, 90, 0.1) 0%, transparent 70%);
    border-radius: 38% 62% 45% 55% / 52% 48% 52% 48%;
    animation: float 18s ease-in-out infinite reverse;
    z-index: 0;
  }

  .hero > * {
    position: relative;
    z-index: 1;
  }

  h1 {
    font-size: clamp(2.5rem, 8vw, 5rem);
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
    line-height: 1.1;
    text-align: center;
    animation: slideUp 0.6s ease-out;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .subtitle {
    font-size: clamp(1.125rem, 3vw, 1.5rem);
    color: var(--color-slate);
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
    font-weight: 500;
    line-height: 1.5;
    animation: slideUp 0.6s ease-out 0.1s backwards;
  }

  .tagline {
    font-size: clamp(0.875rem, 2vw, 1rem);
    color: var(--color-text-muted);
    text-align: center;
    max-width: 800px;
    margin: var(--spacing-md) auto 0;
    font-weight: 400;
    line-height: 1.6;
    opacity: 0.85;
    animation: slideUp 0.6s ease-out 0.15s backwards;
  }

  .intro {
    margin-bottom: var(--spacing-xl);
    padding: var(--spacing-lg);
    background: linear-gradient(135deg, rgba(91, 140, 90, 0.08) 0%, rgba(230, 126, 34, 0.05) 100%);
    border-radius: var(--radius-lg);
    border-left: 4px solid var(--color-kale);
    position: relative;
    overflow: hidden;
    animation: slideUp 0.6s ease-out 0.2s backwards;
  }

  .intro::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(230, 126, 34, 0.1) 0%, transparent 70%);
    border-radius: 50%;
    transform: translate(30%, -30%);
  }

  h2 {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
  }

  .intro p {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    line-height: 1.8;
    max-width: 900px;
    color: var(--color-charcoal);
    position: relative;
  }

  .features {
    margin-top: var(--spacing-xl);
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(320px, 100%), 1fr));
    gap: var(--spacing-lg);
    margin-top: var(--spacing-lg);
  }

  .feature-card {
    background: var(--color-bg-elevated);
    padding: var(--spacing-lg);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-base);
    position: relative;
    overflow: hidden;
    animation: slideUp 0.6s ease-out backwards;
  }

  .feature-card:nth-child(1) { animation-delay: 0.3s; }
  .feature-card:nth-child(2) { animation-delay: 0.4s; }
  .feature-card:nth-child(3) { animation-delay: 0.5s; }

  /* Decorative corner accent */
  .feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, transparent 0%, transparent 50%, rgba(230, 126, 34, 0.08) 100%);
    border-radius: 0 var(--radius-md) 0 100%;
  }

  .feature-card:hover {
    transform: translateY(-8px) scale(1.01);
    box-shadow: var(--shadow-lg);
  }

  .feature-card:hover::before {
    background: linear-gradient(135deg, transparent 0%, transparent 50%, rgba(230, 126, 34, 0.15) 100%);
  }

  .feature-card h3 {
    color: var(--color-primary);
    margin-bottom: var(--spacing-sm);
    font-size: clamp(1.375rem, 3vw, 1.75rem);
    position: relative;
  }

  .feature-card h3 a {
    color: var(--color-primary);
    text-decoration: none;
    position: relative;
    transition: color var(--transition-base);
  }

  .feature-card h3 a::after {
    content: ' â†’';
    opacity: 0;
    transform: translateX(-10px);
    display: inline-block;
    transition: all var(--transition-base);
    color: var(--color-carrot);
  }

  .feature-card:hover h3 a::after {
    opacity: 1;
    transform: translateX(0);
  }

  .feature-card h3 a:hover {
    color: var(--color-carrot);
  }

  .feature-card p {
    color: var(--color-text);
    line-height: 1.7;
    margin-bottom: var(--spacing-md);
    font-size: 1.05rem;
  }

  .feature-card ul {
    list-style: none;
    padding: 0;
    margin-top: var(--spacing-md);
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
  }

  .feature-card ul li {
    position: relative;
    color: var(--color-charcoal);
    font-size: 0.95rem;
    padding-left: 1.75rem;
    line-height: 1.6;
  }

  .feature-card ul li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.5em;
    width: 6px;
    height: 6px;
    background: var(--color-kale);
    border-radius: 50%;
    box-shadow: 0 0 0 3px rgba(91, 140, 90, 0.2);
  }


  /* Enhanced Mobile Responsiveness */
  @media (max-width: 768px) {
    .hero {
      padding: var(--spacing-xl) 0;
    }

    h1 {
      font-size: clamp(2rem, 10vw, 3rem);
    }

    .subtitle {
      font-size: 1.125rem;
    }

    .tagline {
      font-size: 0.875rem;
      margin-top: var(--spacing-sm);
    }

    .intro {
      padding: var(--spacing-md);
    }

    .feature-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }

    .feature-card {
      padding: var(--spacing-md);
    }
  }

  @media (max-width: 480px) {
    .hero::before,
    .hero::after {
      width: 250px;
      height: 250px;
    }

    .intro {
      border-left-width: 3px;
    }

    .feature-card ul li {
      font-size: 0.9rem;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>
