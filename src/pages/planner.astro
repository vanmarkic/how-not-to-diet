---
/**
 * Weekly Menu Planner Page
 *
 * Interactive weekly menu builder with AI-powered food suggestions.
 */

import Layout from '@layouts/Layout.astro';
import MenuBuilder from '../islands/MenuBuilder';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Weekly Menu Planner",
  "applicationCategory": "HealthApplication",
  "description": "Interactive weekly meal planner with AI-powered food suggestions based on synergies and nutrition science",
  "operatingSystem": "Web Browser",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  }
};
---

<Layout 
  title="Weekly Menu Planner - AI-Powered Meal Planning | How Not To Diet"
  description="Create your personalized weekly meal plan with AI-powered food suggestions. Optimize nutrition with food synergies, timing recommendations, and Daily Dozen coverage."
  keywords="weekly meal planner, meal planning tool, AI meal planner, healthy meal plan, nutrition planning, weekly menu, food synergies planner"
  structuredData={structuredData}
>
  <div class="planner-page">
    <MenuBuilder client:only="react" />
  </div>
</Layout>

<style>
  .planner-page {
    width: 100%;
    max-width: 100%;
    padding: 0;
    margin: 0;
  }

  /* Menu Builder Styles */
  :global(.menu-builder) {
    min-height: 100vh;
    padding: 2rem;
    background: #f8f9fa;
  }

  /* Header */
  :global(.menu-builder-header) {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #dee2e6;
  }

  :global(.menu-builder-header h1) {
    margin: 0;
    font-size: 2rem;
    color: #2c3e50;
  }

  :global(.menu-actions) {
    display: flex;
    gap: 0.75rem;
  }

  /* Buttons */
  :global(.btn-primary),
  :global(.btn-secondary),
  :global(.btn-close) {
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }

  :global(.btn-primary) {
    background: #27ae60;
    color: white;
  }

  :global(.btn-primary:hover) {
    background: #229954;
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(39, 174, 96, 0.3);
  }

  :global(.btn-secondary) {
    background: #ecf0f1;
    color: #2c3e50;
  }

  :global(.btn-secondary:hover) {
    background: #d5dbdb;
  }

  :global(.btn-close) {
    background: transparent;
    color: #7f8c8d;
    padding: 0.25rem 0.5rem;
  }

  :global(.btn-close:hover) {
    background: #ecf0f1;
  }

  /* Grid Layout */
  :global(.menu-builder-grid) {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 1.5rem;
    align-items: start;
  }

  /* Weekly Grid Table */
  :global(.weekly-grid-table) {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0.5rem;
    background: white;
    padding: 1rem;
    border-radius: 0.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  :global(.weekly-grid-table th) {
    padding: 0.75rem;
    text-align: center;
    font-weight: 600;
    color: #2c3e50;
    background: #ecf0f1;
    border-radius: 0.25rem;
  }

  :global(.weekly-grid-table td) {
    padding: 0;
  }

  /* Meal Cells */
  :global(.meal-cell) {
    min-height: 120px;
    padding: 0.75rem;
    border: 2px solid #dee2e6;
    border-radius: 0.375rem;
    cursor: pointer;
    transition: all 0.2s;
    background: white;
  }

  :global(.meal-cell:hover) {
    border-color: #27ae60;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  :global(.meal-cell.active) {
    border-color: #27ae60;
    border-width: 3px;
    box-shadow: 0 0 0 3px rgba(39, 174, 96, 0.1);
  }

  :global(.meal-cell.empty) {
    background: #f8f9fa;
  }

  :global(.meal-cell-empty) {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    color: #95a5a6;
    font-size: 0.875rem;
  }

  :global(.meal-cell-foods) {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  /* Food Chips */
  :global(.food-chip) {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.375rem 0.5rem;
    background: #e8f5e9;
    border-radius: 0.25rem;
    font-size: 0.8125rem;
    color: #2c3e50;
  }

  :global(.food-chip-remove) {
    background: transparent;
    border: none;
    color: #7f8c8d;
    font-size: 1.25rem;
    line-height: 1;
    cursor: pointer;
    padding: 0 0.25rem;
    margin-left: 0.5rem;
  }

  :global(.food-chip-remove:hover) {
    color: #e74c3c;
  }

  /* Suggestion Panel */
  :global(.suggestion-panel) {
    width: 350px;
    background: white;
    border-radius: 0.5rem;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.15);
    position: sticky;
    top: 2rem;
    max-height: calc(100vh - 4rem);
    display: flex;
    flex-direction: column;
  }

  :global(.suggestion-panel-header) {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    border-bottom: 1px solid #dee2e6;
  }

  :global(.suggestion-panel-header h3) {
    margin: 0;
    font-size: 1rem;
    color: #2c3e50;
    text-transform: capitalize;
  }

  :global(.suggestion-panel-search) {
    padding: 1rem;
    border-bottom: 1px solid #dee2e6;
  }

  :global(.search-input) {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #dee2e6;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }

  :global(.search-input:focus) {
    outline: none;
    border-color: #27ae60;
    box-shadow: 0 0 0 3px rgba(39, 174, 96, 0.1);
  }

  :global(.suggestion-panel-list) {
    flex: 1;
    overflow-y: auto;
    padding: 0.5rem;
  }

  :global(.no-suggestions) {
    padding: 2rem 1rem;
    text-align: center;
    color: #95a5a6;
    font-size: 0.875rem;
  }

  /* Suggestion Items */
  :global(.suggestion-item) {
    padding: 0.75rem;
    margin-bottom: 0.5rem;
    border: 1px solid #dee2e6;
    border-radius: 0.375rem;
    transition: all 0.2s;
  }

  :global(.suggestion-item:hover) {
    border-color: #27ae60;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  }

  :global(.suggestion-item-header) {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  :global(.suggestion-item-name) {
    flex: 1;
    font-weight: 500;
    color: #2c3e50;
    font-size: 0.875rem;
  }

  :global(.suggestion-item-score) {
    font-size: 0.75rem;
    font-weight: 600;
    color: #27ae60;
    padding: 0.125rem 0.375rem;
    background: #e8f5e9;
    border-radius: 0.25rem;
  }

  /* Badges */
  :global(.badge) {
    font-size: 0.6875rem;
    font-weight: 600;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    text-transform: uppercase;
  }

  :global(.badge-excellent) {
    background: #27ae60;
    color: white;
  }

  :global(.badge-good) {
    background: #3498db;
    color: white;
  }

  /* Breakdown */
  :global(.suggestion-item-breakdown) {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    margin-bottom: 0.5rem;
  }

  :global(.breakdown-item) {
    font-size: 0.75rem;
    color: #7f8c8d;
  }

  :global(.suggestion-item-add) {
    width: 100%;
    padding: 0.375rem;
    background: #27ae60;
    color: white;
    border: none;
    border-radius: 0.25rem;
    font-size: 0.8125rem;
    font-weight: 500;
    cursor: pointer;
    transition: background 0.2s;
  }

  :global(.suggestion-item-add:hover) {
    background: #229954;
  }

  /* Loading State */
  :global(.menu-builder-loading) {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 400px;
    font-size: 1.125rem;
    color: #7f8c8d;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    :global(.menu-builder-grid) {
      grid-template-columns: 1fr;
    }

    :global(.suggestion-panel) {
      width: 100%;
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      top: auto;
      max-height: 60vh;
      border-radius: 1rem 1rem 0 0;
      z-index: 100;
    }
  }

  @media (max-width: 768px) {
    :global(.menu-builder) {
      padding: 1rem;
    }

    :global(.menu-builder-header) {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    :global(.menu-actions) {
      width: 100%;
      flex-wrap: wrap;
    }

    :global(.menu-actions button) {
      flex: 1;
      min-width: calc(50% - 0.375rem);
    }

    :global(.weekly-grid-table) {
      font-size: 0.75rem;
    }

    :global(.weekly-grid-table th),
    :global(.weekly-grid-table td) {
      padding: 0.25rem;
    }

    :global(.meal-cell) {
      min-height: 80px;
      padding: 0.5rem;
    }

    :global(.food-chip) {
      font-size: 0.75rem;
      padding: 0.25rem 0.375rem;
    }
  }
</style>
