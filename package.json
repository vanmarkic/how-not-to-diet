{
  "name": "how-not-to-diet-menu-planner",
  "version": "0.1.0",
  "description": "A weekly menu planner based on food science principles",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check --watch",
    "type-check": "tsc --noEmit",
    "build:foods": "node scripts/aggregate-foods.js",
    "validate:foods": "node scripts/validate-foods.js",
    "new:food": "node scripts/new-food-template.js",
    "split:foods": "node scripts/split-foods.js",
    "prebuild": "npm run validate:foods && npm run build:foods",
    "test": "TMPDIR=./tmp vitest run",
    "test:watch": "TMPDIR=./tmp vitest",
    "test:ui": "TMPDIR=./tmp vitest --ui",
    "test:coverage": "TMPDIR=./tmp vitest run --coverage"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/react": "^4.4.2",
    "@astrojs/sitemap": "^3.6.0",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "astro": "^4.16.12",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.10.1",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.10",
    "glob": "^12.0.0",
    "jsdom": "^27.2.0",
    "vitest": "^4.0.10"
  }
}
